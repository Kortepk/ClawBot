<Window x:Class="ClawBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Robot Arm Controller" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <h:HelixViewport3D x:Name="viewport" Grid.Row="0">
            <h:DefaultLights/>
        </h:HelixViewport3D>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <!-- Ползунок для базовой детали -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Base Rotation 1:" Width="100"/>
                <Slider x:Name="baseSlider" Tag="0" Width="300" Minimum="-180" Maximum="180" ValueChanged="BaseSlider_ValueChanged"/>
                <TextBox Text="{Binding ElementName=baseSlider, Path=Value, StringFormat={}{0:F0}°}" Width="50"/>
            </StackPanel>

            <!-- Ползунок для второй детали -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Arm Rotation 2:" Width="100"/>
                <Slider x:Name="armSlider" Tag="1" Width="300" Minimum="-90" Maximum="90" ValueChanged="ArmSlider_ValueChanged"/>
                <TextBox Text="{Binding ElementName=armSlider, Path=Value, StringFormat={}{0:F0}°}" Width="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>