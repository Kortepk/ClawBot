<Window x:Class="ClawBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Robot Arm Controller" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 3D Viewport -->
        <h:HelixViewport3D x:Name="viewport" Grid.Row="0">
            <h:DefaultLights/>
            <ModelVisual3D x:Name="robotModel"/>
        </h:HelixViewport3D>

        <!-- Slider Control -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Rotation Angle:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider x:Name="rotationSlider" Width="300" Minimum="0" Maximum="360" Value="0"/>
            <TextBox x:Name="angleText" Width="50" Margin="10,0,0,0" 
                     Text="{Binding ElementName=rotationSlider, Path=Value, StringFormat={}{0:F0}°}"/>
        </StackPanel>
    </Grid>
</Window>